<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="250"
		Width="300" Height="250"
        x:Class="Seetek_EMS.Views.UserLoginWindow"
		xmlns:vm="using:Seetek_EMS.ViewModels"
		x:DataType="vm:UserLoginWindowViewModel"
        Title="UserLoginWindow"
		CanResize="False"
		WindowStartupLocation="CenterOwner">

	<Design.DataContext>
		<vm:UserLoginWindowViewModel/>
	</Design.DataContext>
	
	
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock Text="Username:" Margin="0,0,0,5"/>
		<TextBox Text="{Binding Username}" Width="200"/>

		<TextBlock Text="Password:" Margin="0,0,0,5"/>

		<CheckBox IsChecked="{Binding PassCheck}">Use Password</CheckBox>
		<TextBox PasswordChar="*" Text="{Binding Password}" IsEnabled="{Binding PassCheck}" Width="200"/>


		<TextBlock Text="{Binding ErrorMsg}" Foreground="Yellow" />
		<StackPanel Spacing="20" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Background="Green" Content="Login" Command="{Binding LoginCommand}" Width="70" Margin="0,10,0,0"></Button>
			<Button Content="Clear" Command="" Width="70" Margin="0,10,0,0"/>


		</StackPanel>

	</StackPanel>
	
	
</Window>
